{
  "name": "crowdsieve",
  "version": "1.0.0",
  "description": "CrowdSieve - CrowdSec CAPI filtering proxy with dashboard",
  "license": "AGPL-3.0-only",
  "type": "module",
  "workspaces": [
    "dashboard"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:dashboard": "next dev dashboard",
    "build": "tsc && cd dashboard && next build",
    "start": "node dist/index.js",
    "start:dashboard": "next start dashboard",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint src && cd dashboard && eslint .",
    "lint:fix": "eslint src --fix && cd dashboard && eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"dashboard/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"dashboard/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:postgres": "vitest run tests/postgres.integration.test.ts",
    "check": "npm run typecheck && npm run lint && npm run format:check && npm test"
  },
  "dependencies": {
    "@fastify/compress": "^8.3.1",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^9.0.0",
    "@maxmind/geoip2-node": "^5.0.0",
    "better-sqlite3": "^11.0.0",
    "drizzle-orm": "^0.38.0",
    "fastify": "^5.6.2",
    "ip-cidr": "^4.0.0",
    "minimatch": "^9.0.3",
    "pino": "^8.19.0",
    "yaml": "^2.3.0",
    "zod": "^3.22.0"
  },
  "optionalDependencies": {
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/leaflet": "^1.9.8",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "autoprefixer": "^10.4.17",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.0",
    "drizzle-kit": "^1.0.0-beta.8",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.1.0",
    "eslint-config-prettier": "^9.1.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.300.0",
    "next": "^15.1.0",
    "pino-pretty": "^10.3.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.51.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
